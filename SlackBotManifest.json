{
  "display_information": {
    "name": "QnA Chatbot",
    "description": "Ask our AI Q&A Chatbot any questions you have about Hack the North! Made in partnership with Voiceflow.",
    "background_color": "#2c344d"
  },
  "features": {
    "bot_user": {
      "display_name": "QnA Chatbot",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/ask",
        "description": "Ask Q&A in DMs",
        "should_escape": false
      },
      {
        "command": "/help-qna",
        "description": "Learn how auto Q&A works",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "channels:history",
        "chat:write",
        "groups:history",
        "im:history",
        "mpim:history",
        "reactions:read",
        "reactions:write",
        "commands"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "message.channels",
        "message.groups",
        "message.im",
        "message.mpim"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
